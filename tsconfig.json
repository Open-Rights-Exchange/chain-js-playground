{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "paths": {
      "@open-rights-exchange/chainjs": ["../chain-js/src"],
      "@open-rights-exchange/chainjs-plugin-eos" : ["../chain-js-plugin-eos/src"],
      "@open-rights-exchange/chainjs-plugin-ethereum" : ["../chain-js-plugin-ethereum/src"],
      "@open-rights-exchange/chainjs-plugin-algorand" : ["../chain-js-plugin-algorand/src"]
    },
    "allowSyntheticDefaultImports" : true,
    "downlevelIteration" : true,
    "composite": true,
    "skipLibCheck": true,   
    "resolveJsonModule": true,
    "baseUrl": ".",
    "esModuleInterop": true
  },"references": [
    {"path": "../chain-js"},
    {"path": "../chain-js-plugin-eos"},
    {"path": "../chain-js-plugin-ethereum"},
    {"path": "../chain-js-plugin-algorand"},
  ]
}
