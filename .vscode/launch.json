{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "pwa-node",
            "request": "launch",
            "name": "Debug via ts-node",
            "outFiles": [
                "${workspaceFolder}/**/*.js",
                "${workspaceRoot}/../chain-js/**/*.js",
                "${workspaceRoot}/../chain-js-plugin-eos/**/*.js",
                "${workspaceRoot}/../chain-js-plugin-ethereum/**/*.js",
            ],
            "runtimeArgs": ["--nolazy", "-r", "tsconfig-paths/register", "-r", "ts-node/register/transpile-only"],
            "args": ["src/index.ts"],
            "cwd": "${workspaceRoot}",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/../chain-js/**",
                "${workspaceRoot}/../chain-js-plugin-eos/**",
                "${workspaceRoot}/../chain-js-plugin-ethereum/**",
                "!**/node_modules/**"
            ],
            "smartStep": true,
            //"console": "internalConsole"
        },        
        {
            "name": "Run Webpack Bundle",
            "program": "${workspaceFolder}/dist/bundle.js",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**",
                "<node_internals>/**/*.js"
            ],
            "type": "pwa-node",
            "preLaunchTask": "npm: webpack_build_from_local_source"
        }
    ]
}